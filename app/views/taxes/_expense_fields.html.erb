<div class="nested-fields">
  <hr>
  <div class="form-group my-2 row">
    <%= f.label 'Tipo de despesa', class: 'col-sm-3 col-form-label'  %>
    <div class="d-flex col-sm-9">
      <%= f.text_field :service_type, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group my-2 row">
    <%= f.label 'Valor', class: 'col-sm-3 col-form-label'  %>
    <div class="d-flex col-sm-4">
      <%= f.number_field :value, class: 'form-control' %>
    </div>
  </div>

  <%= link_to_remove_association "Remove despesa", f, class: "btn btn-sm btn-outline-dark" %>
</div>