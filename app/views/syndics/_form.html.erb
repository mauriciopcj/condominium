<%= form_with(model: syndic, local: true, class: 'p-3') do |form| %>
  <% if syndic.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(syndic.errors.count, "error") %> prohibited this syndic from being saved:</h2>

      <ul>
      <% syndic.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-2 row">
  <%= form.label 'Início da vigência', class: 'col-sm-3 col-form-label' %>
    <div class="d-flex col-sm-9">
      <%= form.date_select :start, {order: [:day, :month, :year], use_two_digit_numbers: true}, {:class=>'form-control'} %>
    </div>
  </div>

  <div class="form-group my-2 row">
  <%= form.label 'Fim da vigência', class: 'col-sm-3 col-form-label' %>
    <div class="d-flex col-sm-9">
      <%= form.date_select :end, {order: [:day, :month, :year], include_blank: true, use_two_digit_numbers: true}, {:class=>'form-control'} %>
    </div>
  </div>

  <div class="form-group my-2 row">
    <%= form.label 'Síndico', class: 'col-sm-3 col-form-label' %>
    <div class="d-flex col-sm-9">
      <%= collection_select(:syndic, :user_id, User.all, :id, :name, {}, {:class=>'form-control'}) %>
    </div>
  </div>

  <div class="mt-3"> 
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
