<p id="notice"><%= notice %></p>

<h1>Apartamentos</h1>

<table class="table">
  <thead>
    <tr>
      <th>Piso</th>
      <th>Número</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.floor %></td>
        <td><%= apartment.number %></td>
        <td><%= link_to 'Detalhes', apartment, class: "btn btn-sm btn-outline-dark" %></td>
        <td><%= link_to 'Editar', edit_apartment_path(apartment), class: "btn btn-sm btn-outline-dark" %></td>
        <td><%= link_to 'Remover', apartment, method: :delete, data: { confirm: 'Você tem certeza que deseja apagar este apartamento?' }, class: "btn btn-sm btn-outline-dark" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="d-flex align-items-end flex-column">
  <%= paginate @apartments %>
</div>

<hr>

<%= link_to 'Adicionar Apartamento', new_apartment_path, class: "btn btn-sm btn-dark mb-5" %>
