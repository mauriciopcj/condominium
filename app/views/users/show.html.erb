<div class="card mt-5">
  <div class="px-3">
    <p id="notice"><%= notice %></p>

    <p>
      <strong>Nome:</strong>
      <%= @user.name %>
    </p>

    <p>
      <strong>Email:</strong>
      <%= @user.email %>
    </p>

    <p>
      <strong>Telefone:</strong>
      <%= @user.phone %>
    </p>

    <p>
      <strong>Apartamento:</strong>
      <%= @user.apartment.number %>
    </p>
  </div>

  <div class="card-footer">
    <%= link_to 'Editar', edit_user_path(@user), class: 'btn btn-sm btn-outline-dark' %> |
    <%= link_to 'Voltar', users_path, class: 'btn btn-sm btn-outline-dark' %>
  </div>

</div>