<%= form_with(model: user, local: true, class: "p-3") do |form| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group my-2 row">
    <%= form.label :name, class: 'col-sm-2 col-form-label' %>
    <div class="d-flex col-sm-10">
      <%= form.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group my-2 row">
    <%= form.label :email, class: 'col-sm-2 col-form-label' %>
    <div class="d-flex col-sm-4">
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <%= form.label :phone, class: 'col-sm-2 col-form-label' %>
    <div class="d-flex col-sm-4">
      <%= form.text_field :phone, class: "form-control" %>
    </div>
  </div>

  <div class="form-group my-2 row">
    <%= form.label :password, class: 'col-sm-2 col-form-label' %>
    <div class="d-flex col-sm-4">
      <%= form.text_field :password, type: "password", class: "form-control" %>
    </div>

    <%= form.label :apartment_id, class: 'col-sm-2 col-form-label' %>
    <div class="d-flex col-sm-4">
      <%= collection_select(:user, :apartment_id, Apartment.all, :id, :number, {}, {:class=>'form-control'}) %>
    </div>
  </div>

  <div class="mt-3"> 
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
